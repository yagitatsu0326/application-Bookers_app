<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1>Editing Book</h1>

	<%= form_for(@book, url: "/books/#{@book.id}" ) do |f| %>
		<p>Title</p>
		<%= f.text_field :title  %>
		<p>Body</p>
		<%= f.text_area :body  %>
		<%= f.submit "Update book"  %>
	<% end %>
	<%= link_to "Show", book_path(@book) %>
	|
	<%= link_to "Back", books_path %>
</body>
</html>
