<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1>Editing Book</h1>
	<% @book.errors.full_messages .each do |message| %>
		<%= message %>
	<% end %>
	<%= form_for(@book, url: "/books/#{@book.id}" ) do |f| %>
		<p>Title</p>
		<%= f.text_field :title  %>
		<p>Body</p>
		<%= f.text_area :body  %>
		<br><%= f.submit "Update book" %></br>
	<% end %>
	<%= link_to "Show", book_path(@book) %>
	|
	<%= link_to "Back", books_path %>
</body>
</html>
