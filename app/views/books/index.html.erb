<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan ="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books. each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book.id) %></td>
					<td><%= link_to "Edit", edit_book_path(book.id) %></td>
					<td><%= link_to "Destroy", book_path(book.id) , method: :delete, data: {confirm: "Are you sure?" } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<h2>New Books</h2>
	
	<%= form_for(@book, url: books_path ) do |f| %>
		<p>Title</p>
		<%= f.text_field :title  %>
		<p>Body</p>
		<%= f.text_area :body  %>
		<%= f.submit "Create Book"  %>
	<% end %>
</body>
</html>






